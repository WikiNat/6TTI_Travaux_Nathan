<Window x:Class="ExObjetEvents_Nathan_UAA14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExObjetEvents_Nathan_UAA14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">


        
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <TextBlock  Text="A" FontSize="60"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0">
            <TextBlock  Text="B" FontSize="60"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0">
            <TextBlock  Text="C" FontSize="60"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1">
            <TextBox  Height="50" Width="200" Background="White"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <TextBox   Height="50" Width="200" Background="White"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1">
            <TextBox   Height="50" Width="200" Background="White"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="3" Grid.ColumnSpan="2">
            <Button Content="CALCULER" Height="60" Width="230" Background="LightGray" FontSize="30" FontFamily="Arial Black"/>
        </WrapPanel>
    </Grid>
</Window>
